<form
  action="/posts/update/{{this.data.id}}"
  method="POST"
  class="flex flex-col container mx-auto gap-2 my-4"
>
  <input
    type="text"
    placeholder="title"
    name="title"
    class="px-2 border-2 border-gray rounded hover:bg-gray-100 transition-all"
    value="{{this.data.title}}"
  />
  <textarea
    type="textarea"
    placeholder="body"
    name="body"
    rows="8"
    class="p-2 border-2 border-gray rounded hover:bg-gray-100 transition-all"
  >{{this.data.body}}</textarea>
  <button
    type="submit"
    class="border-2 border-gray text-gray-400 rounded w-1/3 mx-auto hover:bg-gray-100 transition-all"
  >Submit</button>
</form>